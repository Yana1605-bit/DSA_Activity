#include <iostream>
#include <sstream>
#include <map>
using namespace std;

int main() {
    string word = "this is a test this is only a test";
    stringstream sstream(word);   
    
    map <string, int> count;  

    string wordCount; 
    while (sstream >> wordCount) { 
        count[wordCount]++; 
    }

    for (const auto &Words : count) {
        cout << Words.first << " = " << Words.second << endl;
    }

    return 0;
}
