#include <iostream>
#include <map>
using namespace std;

int main(){
	map <string, int> PeopleMap;
	PeopleMap.insert (pair<string, int> ("Alice", 15));
	PeopleMap.insert (pair<string, int> ("Bob", 20));
	PeopleMap.insert (pair<string, int> ("Charlie", 35));

	PeopleMap["Diana"] = 19;
	PeopleMap["Mae"] = 20;
	
	//Updated Alice's age
	PeopleMap["Alice"] = 16;
	
	cout << "Map Size: " << endl;
	for (const auto &age : PeopleMap){
		cout << age.first << ", " << age.second << endl;
	}
	cout << endl;
	
	//Specific person
	string Name = "Diana";
    auto name = PeopleMap.find(Name);
    cout << name->first << ", " << name->second << endl;
	cout << endl;
	
	//Erasing Bob
	PeopleMap.erase("Charlie");

    int count = 0;
    for (const auto &age : PeopleMap) {
        count++;
    }

    cout << "Updated Map Size after deletion: " << count << endl;
    cout << "Contents of the map:" << endl;
    for (const auto &age : PeopleMap) {
        cout << age.first << ", " << age.second << endl;
    }
	
	return 0;
}
